{
  "name": "valigator",
  "version": "0.0.0",
  "description": "Simple and easy validation tool for node applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muhammad-abubakkar/valigator.git"
  },
  "bugs": {
    "url": "https://github.com/muhammad-abubakkar/valigator/issues"
  },
  "homepage": "https://github.com/muhammad-abubakkar/valigator#readme",
  "keywords": [
    "validation",
    "validator",
    "form-validation"
  ],
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  },
  "author": "Abu Bakkar Siddique",
  "license": "MIT"
}
